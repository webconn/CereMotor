                prompt "Parity check"

                config UART3_PARITY_NONE
                bool "None"

                config UART3_PARITY_ODD
                bool "Odd"

                config UART3_PARITY_EVEN
                bool "Even"

            endchoice

        endmenu
        endif

        if USE_UART4
        menu "UART4 configuration"
        
            config UART4_BAUDRATE
