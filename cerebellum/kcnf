                prompt "Parity check"

                config UART2_PARITY_NONE
                bool "None"

                config UART2_PARITY_ODD
                bool "Odd"

                config UART2_PARITY_EVEN
                bool "Even"

            endchoice

        endmenu
        endif

        if USE_UART3
        menu "USART3 configuration"
        
            config UART3_BAUDRATE
